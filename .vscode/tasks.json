{
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "C:\\Program Files\\gcc\\mingw32\\bin\\g++.exe",
			"args": [
				"-std=c99",
				"-pedantic",
				"-Wall",
				"-Wno-unknown-pragmas",
				"-g",
				"./${fileBasename}",
				"-o",
				"./${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": ["$gcc"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task generated by Debugger."
		},
		{
			"type": "shell",
			"label": "Clean",
			"command": "find . -name '*.exe' -exec rm -v {} \\;",
			"args": [],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": ["$gcc"],
			"group": "none",
			"detail": "Remove all .exe files"
		}
	],
	"version": "2.0.0"
}
