{
	"tasks": [
		{
			"type": "cppbuild",
			"label": "gcc build active file",
			"command": "gcc",
			"args": [
				"-std=c99",
				"-pedantic",
				"-Wall",
				"-Wno-unknown-pragmas",
				"-g",
				"./${fileBasename}",
				"-o",
				"./${fileBasenameNoExtension}.x"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": ["$gcc"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "Clean",
			"command": "rm -rf *.x",
			"args": [],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": ["$gcc"],
			"group": "none",
			"detail": "Remove all binary files"
		}
	],
	"version": "2.0.0"
}
